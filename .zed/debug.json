[
  {
    "label": "Build & Debug native binary",
    "build": {
      "command": "cargo",
      "args": ["build"],
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/GameSaveServer",
    "sourceLanguages": ["rust"],
    "env": { "RUST_LOG": "DEBUG" },
    "request": "launch",
    "adapter": "CodeLLDB",
  },
  {
    "label": "Build native binary",
    "build": {
      "command": "cargo",
      "args": ["build", "--release"],
    },
    "program": "$ZED_WORKTREE_ROOT/target/release/GameSaveServer",
    "sourceLanguages": ["rust"],
    "request": "launch",
    "adapter": "CodeLLDB",
  },
]
